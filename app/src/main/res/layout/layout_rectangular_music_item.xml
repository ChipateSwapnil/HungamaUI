<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMainRectMusic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/bucket_music_card_padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBucketRectMusicImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:padding="@dimen/bucket_music_card_padding"
        app:cardCornerRadius="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/ivBucketRectMusicImage"
            android:layout_width="@dimen/bucket_rect_music_image_width"
            android:layout_height="@dimen/bucket_rect_music_image_height"
            app:layout_constraintCircleRadius="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_rect_music"/>
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tvBucketRectMusicTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text"
        android:text="High"
        android:gravity="center"
        android:elevation="2dp"
        app:layout_constraintBottom_toBottomOf="@id/cvBucketRectMusicImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvBucketRectMusicImage" />


</androidx.constraintlayout.widget.ConstraintLayout>